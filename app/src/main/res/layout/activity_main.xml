<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resigster_bg"
    android:orientation="vertical"
    android:alpha="1"
    tools:context="com.example.a12289.resigster.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView android:id="@+id/back_register"
                android:src="@mipmap/back_resigster"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView android:text="注册"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/username"
                android:hint="输入手机号(最多11位)"
                android:maxLength="11"
                android:textSize="15sp"
                android:maxLines="1"
                android:inputType="phone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/head" />
            <ImageView android:id="@+id/delete_usename"
                android:src="@mipmap/alldelete1"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/yanzhenma"
                android:textSize="15sp"
                android:maxLength="6"
                android:maxLines="1"
                android:hint="获取验真码(最多6位)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/yanzhenma" />

            <Button android:id="@+id/yanzhen_button"
                android:layout_gravity="right"
                android:text="获取验证码"
                android:textColor="#fff"
                android:background="@drawable/button_selector"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/delete_yanzhen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/alldelete1" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="15sp"
                android:id="@+id/mima"
                android:maxLength="11"
                android:hint="设置密码（最多11位）"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/mima" />
            <ImageView
                android:id="@+id/delete_password"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/alldelete1" />
        </FrameLayout>
        <Button
            android:id="@+id/zhuce_button"
            android:layout_width="250dp"
            android:background="@drawable/resigster_button_bg"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="注册"
            android:layout_marginTop="100dp" />
    </LinearLayout>
</LinearLayout>
